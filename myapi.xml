<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5" method="upgrade">
    <name>COM_MYAPI</name>
    <author>Thomas Welton</author>
    <creationDate>09/05/2011</creationDate>
    <license>GNU/GPL</license>
    <version>1.4</version>
    <description>COM_MYAPI_DESC</description>
	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	
	<scriptfile>script.php</scriptfile>
   
	<installfile>install.myapi.php</installfile>
    <uninstallfile>uninstall.myapi.php</uninstallfile>
	
 	<files folder="components/com_myapi">
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>myapi.php</filename>
        <folder>models</folder>
        <folder>views</folder>
		<folder>assets</folder>
    </files>
	
	<languages folder="components/language">
    	<language tag="en-GB">en-GB/en-GB.com_myapi.ini</language>
		<language tag="nb-NO">nb-NO/nb-NO.com_myapi.ini</language>
   	</languages>


    <administration>
		<menu img="js/ThemeOffice/component.png">myApi</menu>
		<submenu>
			<menu link="option=com_myapi&amp;view=users" view="users">Users</menu>
			<menu link="option=com_myapi&amp;view=plugin&amp;plugin=myApiConnect" view="plugin">App Settings</menu>
			<menu link="option=com_myapi&amp;view=realtime" view="realtime">Real Time</menu>
			<menu link="option=com_myapi&amp;view=pages" view="pages">Pages</menu>
			<menu link="option=com_myapi&amp;view=plugin&amp;plugin=myApiTabs" view="plugin">Tab Application</menu>
			<menu link="option=com_myapi&amp;view=plugin&amp;plugin=myApiOpenGraph" view="plugin">Open Graph</menu>
			<menu link="option=com_myapi&amp;view=plugin&amp;plugin=myApiComment" view="plugin">Comment</menu>
			<menu link="option=com_myapi&amp;view=plugin&amp;plugin=myApiShare" view="plugin">Share</menu>
			<menu link="option=com_myapi&amp;view=plugin&amp;plugin=myApiLike" view="plugin">Like</menu>
			<menu link="option=com_myapi&amp;view=plugin&amp;plugin=myApiSend" view="plugin">Send</menu>
		</submenu>
		
		<files folder="administrator/com_myapi">
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>myapi.php</filename>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>assets</folder>
			<folder>extensions</folder>
			<folder>sql</folder>
		</files>
	
		<languages folder="administrator/language">
			<language tag="en-GB">en-GB/en-GB.com_myapi.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_myapi.sys.ini</language>
			<language tag="nb-NO">nb-NO/nb-NO.com_myapi.ini</language>
		</languages>
 	</administration>
</install>